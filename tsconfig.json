{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "types": [
      "node",
      "./src/node_modules/@types"
    ],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "./src/node_modules/*"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}